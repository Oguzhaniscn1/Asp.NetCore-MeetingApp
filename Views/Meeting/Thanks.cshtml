@model UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";

}
<main class="text-center">
    <h1 class="h4">Başvuru Durumu</h1>

    @if(Model.WillAttend==true)
    {

        <p>teşekkürler, @Model.Name toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor</p>
        <a class="btn btn-primary" type="submit" href="/meeting/list">Katılımcıları listele</a>
    }
    else
    {
        <p>@Model.Name, Katılmadığından dolayı üzgünüz.</p>
        <a class="btn btn-primary" type="submit" href="/Meeeting/Apply">Başvuru Formu</a>
    }




</main>